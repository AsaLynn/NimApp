<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".msg.MsgActivity">

    <com.zxn.titleview.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_title_height"
        android:background="#101118"
        app:backIcon="@mipmap/nim_actionbar_dark_back_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="用户昵称"
        app:titleTextColor="@color/c_ffffff" />

    <TextView
        android:id="@+id/tvOnlineTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#101118"
        android:gravity="center"
        android:text="相处0.000475天  在线"
        android:textColor="#ff6a6a86"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/titleView" />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOnlineTime" />


</androidx.constraintlayout.widget.ConstraintLayout>